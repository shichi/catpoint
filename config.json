{
  "presentation": {
    "title": "プレゼンテーション",
    "slideDirectory": "./slides",
    "slidePattern": "*.html",
    "totalSlides": null,
    "autoDetectSlides": true,
    "supportedFormats": [".html", ".htm"],
    "defaultSlideSize": {
      "width": 1280,
      "height": 720
    }
  },
  "ui": {
    "theme": {
      "backgroundColor": "#0a192f",
      "controlsBackground": "rgba(0, 0, 0, 0.7)",
      "primaryColor": "#3b82f6",
      "textColor": "white"
    },
    "controls": {
      "showNavigationButtons": true,
      "showPageIndicator": true,
      "showFullscreenButton": true,
      "position": "bottom"
    },
    "cursor": {
      "enabled": true,
      "color": "#ff0000",
      "size": 20,
      "trailEnabled": true,
      "trailLength": 20
    }
  },
  "zoom": {
    "enabled": true,
    "factor": 2,
    "maxZoom": 3,
    "minZoom": 0.5,
    "step": 0.2,
    "scrollSensitivity": 30
  },
  "drawing": {
    "enabled": true,
    "lineColor": "#ff0000",
    "lineWidth": 3,
    "fadeTimeout": 3000,
    "maxLines": 50
  },
  "pdf": {
    "enabled": true,
    "filename": "presentation",
    "includeDrawings": false
  },
  "transitions": {
    "type": "dissolve",
    "duration": 500,
    "enabled": true
  },
  "keyboard": {
    "nextSlide": ["ArrowRight", "Space"],
    "prevSlide": ["ArrowLeft"],
    "firstSlide": ["Home"],
    "lastSlide": ["End"],
    "fullscreen": ["f", "F"],
    "zoomIn": ["+", "="],
    "zoomOut": ["-", "_"],
    "resetZoom": ["0"]
  },
  "electron": {
    "window": {
      "width": 1400,
      "height": 900,
      "minWidth": 800,
      "minHeight": 600,
      "resizable": true
    },
    "devMode": false
  }
}